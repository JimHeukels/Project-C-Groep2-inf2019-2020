@model Bliss_Programma.Models.Locatie

@{
    ViewData["Title"] = "Create";
}

<h1>Voeg nieuwe locatie toe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Straatnaam" class="control-label"></label>
                <input asp-for="Straatnaam" class="form-control" />
                <span asp-validation-for="Straatnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nummer" class="control-label"></label>
                <input asp-for="Nummer" class="form-control" />
                <span asp-validation-for="Nummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Toevoeging" class="control-label"></label>
                <input asp-for="Toevoeging" class="form-control" />
                <span asp-validation-for="Toevoeging" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plaatsnaam" class="control-label"></label>
                <input asp-for="Plaatsnaam" class="form-control" />
                <span asp-validation-for="Plaatsnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creëer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
