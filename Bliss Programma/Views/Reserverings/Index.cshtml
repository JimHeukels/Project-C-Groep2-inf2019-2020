@model IEnumerable<Bliss_Programma.Models.Reservering>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<b> @TempData["Status"]</b>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.WerknemerId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.WerknemerEmail)
            </th>
            <th>
                Locatie
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruimte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Datum.ToString("dd-MM-yyyy")
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.WerknemerId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.WerknemerEmail)
            </td>
            <td>
                @item.Ruimte.Locatie.Plaatsnaam
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ruimte.Naam)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 

}
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
