@model IEnumerable<Bliss_Programma.Models.Reservering>

@{
    ViewData["Title"] = "Index";
}

<h1>Overzicht reserveringen</h1>

<p>
    <a asp-action="Create">Maak nieuwe reservering</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WerknemerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ruimte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WerknemerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ruimte.Id)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Bewerk | </a> 

}
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
